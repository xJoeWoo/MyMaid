<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Transparent.Activity.Mymaid" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/tranPhoto</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Inner</item>
    </style>

    <style name="Theme.Mymaid.Soild" parent="Theme.Mymaid">
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="Theme.Mymaid" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_mymaid</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Mymaid</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Mymaid</item>

        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:editTextBackground">@drawable/mymaid_edit_text_holo_light</item>

        <item name="android:textColorHighlight">#99fbb2b2</item>
        <item name="android:textSelectHandleLeft">@drawable/mymaid_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/mymaid_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/mymaid_text_select_handle_middle</item>

        <item name="android:buttonStyle">@style/ButtonMyMaid</item>

        <item name="android:imageButtonStyle">@style/ImageButtonMyMaid</item>

        <item name="android:fastScrollThumbDrawable">@drawable/mymaid_fastscroll_thumb_holo</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBar.Transparent.Mymaid" parent="ActionBar.Transparent.Inner" />

    <style name="ActionBar.Transparent.Inner" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:backgroundStacked">@drawable/ab_transparent_mymaid_new</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundSplit">@drawable/ab_transparent_mymaid_split_new</item>
    </style>

    <style name="ActionBarTabStyle.Mymaid" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mymaid</item>
    </style>

    <!-- New -->

    <style name="ButtonMyMaid" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/mymaid_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonMyMaid" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/mymaid_btn_default_holo_light</item>
    </style>


</resources>