<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Transparent.Activity.Mymaid" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/tranPhoto</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->
    </style>

    <style name="Theme.Mymaid.Soild" parent="Theme.Mymaid">
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="Theme.Mymaid" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_mymaid</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mymaid</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Mymaid</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Mymaid</item>

        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
        <item name="android:editTextStyle">@style/EditTextMyMaid</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBar.Transparent.Mymaid" parent="ActionBar.Transparent.Inner" />

    <style name="ActionBar.Transparent.Inner" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:backgroundStacked">@drawable/ab_transparent_mymaid_new</item>
        <item name="android:background">@drawable/ab_transparent_mymaid_new</item>
        <item name="android:backgroundSplit">@drawable/ab_transparent_mymaid_split_new</item>
    </style>

    <style name="DropDownListView.Mymaid" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mymaid</item>
    </style>

    <style name="ActionBarTabStyle.Mymaid" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mymaid</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mymaid.Widget" parent="@android:style/Theme.Holo">
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mymaid</item>
    </style>


    <!-- New -->

    <style name="EditTextMyMaid" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>